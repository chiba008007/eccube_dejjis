<!DOCTYPE html>

<title>Hello HelloController!</title>

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Hello {{ controller_name }}! ✅</h1>
    <table border=1>
        <tr>
            <th>ID</th>
            <th>名前</th>
            <th>操作</th>
        </tr>
    {% for hello in hellos %}
        <tr> 
            <td>{{ hello.id }}</td> 
            <td>{{ hello.name }}</td>
            <td>
                <a href="{{ path('hello_edit', {'id': hello.id}) }}">編集</a>
            </td>
        </tr>
    {% endfor %}
    </table>
</div>
{% endblock %}
